<%= flash[:notice] %>

<!-- Book detailの本を投稿したuserのuser info -->
<div>
  <h2>User info</h2>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p>name:<%= @user.name %></p>
  <p>introduction:<%= @user.introduction %></p>
  <% if @user == current_user %>
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  
</div>

<!-- New book -->
<h1>New Book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
 <% end %>

<h2>Book detail</h2>
<table>
  <tr>
    <td>
     <span><%= image_tag @book.user.get_profile_image(100,100) %></span>
     <span><%= @book.user.name %></span>
    </td>
    <td><span><%= @book.title %></span></td>
    <td><span><%= @book.body %></span></td>
    <td><%= link_to "edit", edit_book_path(@book) %></td>
    <td>
     <% if @book.user == current_user %>
      <%= link_to "destroy", book_path(@book), method: :delete %>
     <% end %>
    </td>
  </tr>
</table>
 