<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><span><%= image_tag book.user.get_profile_image %></span></td>
    <td><span><%= book.title %></span></td>
    <td><span><%= book.body %></span></td>
  </tr>
  <% end %>
</table>

