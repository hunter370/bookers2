<div><%= flash[:notice] %></div>

<!-- User info-->
<div>
  <h2>User info</h2>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p>name:<%= @user.name %></p>
  <p>introduction:<%= @user.introduction %></p>
  <% if @user == current_user %>
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  
</div>
<!-- New book -->
<h2>New Book</h2>
 <%= form_with model: @book do |f| %>
  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
 <% end %>

 
<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><span><%= image_tag book.user.get_profile_image(100,100) %></span></td>
    <td><span>
      <%= link_to book_path(book.id) do %>
       <%= book.title %>
      <% end %>
      </span></td>
    <td><span><%= book.body %></span></td>
  </tr>
  <% end %>
</table>

