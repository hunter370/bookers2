<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><span><%= image_tag book.user.get_profile_image %></span></td>
    <td><span>
      <%= link_to book_path(book.id) do %>
       <%= book.title %>
      <% end %>
      </span></td>
    <td><span><%= book.body %></span></td>
  </tr>
  <% end %>
</table>

