<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
<!-- User info -->
<div class="col-md-3">
  <h2>User info</h2>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <table class="table">
    <tb>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tb>
  </table>
  <div class="row">
  <% if @user == current_user %>
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  </div>

<!-- New book -->
<h2 class="mt-3">New Book</h2>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>

<div class="col-md-8 offset md-1">
<h2>Users(user一覧)</h2>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tb>
  <% @users.each do |user| %>
  <tr>
    <td><span><%= image_tag user.get_profile_image(100,100) %></span></td>
    <td><span><%= user.name %></span></td>
    <td><span><%= link_to "show", user_path(user.id) %></span></td>
  </tr>
  <% end %>
  </tb>
</table>
</div>
</div>
</div>
</main>