<!-- User info -->
<div>
  <h2>User info</h2>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p>name:<%= @user.name %></p>
  <p>introduction:<%= @user.introduction %></p>
  <% if @user == current_user %>
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  
</div>

<!-- New book -->
<h2>New Book</h2>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users(user一覧)</h1>
<h1>Users</h1>
<table>
  <tr>
    <th>image</th>
    <th>name</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><span><%= image_tag user.get_profile_image(100,100) %></span></td>
    <td><span><%= user.name %></span></td>
    <td><span><%= link_to "show", user_path(user.id) %></span></td>
  </tr>
  <% end %>
  
</table>